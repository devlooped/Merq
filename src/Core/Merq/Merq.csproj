<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.3</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Merq</PackageId>
    <Title>Merq: Command Bus + Event Stream (Interfaces)</Title>
    <Description>Command Bus and Event Stream patterns core interfaces</Description>

    <IncludeContentInPackage>false</IncludeContentInPackage>
    <IncludeContentInPack>false</IncludeContentInPack>
    <IncludeGlobalAssemblyInfo>false</IncludeGlobalAssemblyInfo>
  </PropertyGroup>

  <Import Project="$([MSBuild]::GetPathOfFileAbove('Merq.props', '$(MSBuildThisFileDirectory)'))" />

  <ItemGroup>
    <PackageReference Include="IFluentInterface" Version="2.1.0" PrivateAssets="all" />
    <PackageReference Include="Microsoft.VisualStudioEng.MicroBuild.Core" Version="1.0.0" PrivateAssets="all" />
    <PackageReference Include="MSBuilder.ThisAssembly.Project" Version="0.3.4" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Merq.targets" Pack="true" Kind="build" FrameworkSpecific="true" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Merq.Core.Tests" />
    <FilesToSign Include="$(OutDir)\Merq.dll">
        <Authenticode>Microsoft400</Authenticode>
    </FilesToSign>
  </ItemGroup>

</Project>
